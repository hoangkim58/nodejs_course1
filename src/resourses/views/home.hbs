<div class="mt-4">
    <div class="header-title">
        <h2>Go to the fullstack developer!</h2>
    </div>
    <div class="container">
        <div class="row mx-auto">
            {{#each courses}}
            <div class="card-container col-sm-6 col-lg-4 col-xl-3">
                <div class="card"> 
                    <a href="courses/{{this.slug}}">

                    <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <a href="courses/{{this.slug}}">

                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.description }}.</p>
                        <a href="courses/{{this.slug}}" class="btn btn-primary">Try it</a>
                    </div> 
                </div>
            </div>
            {{/each}}
        </div>

    </div>
</div>