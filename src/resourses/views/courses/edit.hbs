
<div class="container mt-4"> 
    <div class="row justify-content-md-center"> 
        <form method="post" action="/courses/{{course._id}}?_method=PUT" class="col-6">
            <h1 class="mx-auto">Nhập khóa học của bạn</h1>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" value="{{course.name}}" name="name" id="name" > 
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" class="form-control" value="{{course.description}}" name="description" id="description" > 
            </div>
            <div class="form-group">
                <label for="videoId">Video Id</label>
                <input type="text" class="form-control" value="{{course.videoId}}" name="videoId" id="videoId" > 
            </div>
            <div class="form-group">
                <label for="level">Level</label>
                <input type="text" class="form-control" value="{{course.level}}" name="level" id="level" > 
            </div>
            <button type="submit" class="btn btn-primary mt-2">Save</button>
        </form>
    </div> 

</div>