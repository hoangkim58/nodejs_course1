<div class="container">
    <div class="show-title"><h1>{{course.name}}</h1></div>        
    <div class="row">  
        <div class="col-8">
            <div class="show-description">{{course.description}}</div>        
            <iframe width="560" height="315" src="https://www.youtube.com/embed/{{course.videoId}}" 
                title="YouTube video player" frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
            </iframe>
        </div>
        <div class="col-4">
            <img src="{{course.image}}" alt="{{course.slug}}" >
            <button>Register</button>
        </div>   
    </div>
</div>